@{
  Layout = "_Layout";
}

@using ConnorBourbon.Models;

<h1>Brands</h1>

@if (@Model.Count == 0)
{
  <h3>No brands added yet!</h3>
}

@foreach (Brand brand in Model)
{
  <li>@Html.ActionLink($"{brand.Name}", "Details", new {id = brand.BrandId})</li>
}

<p>@Html.ActionLink("Add a new brand", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>