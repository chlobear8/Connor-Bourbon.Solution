@{
  Layout = "_Layout";
}

@using ConnorBourbon.Models;

<h1>Distilleries</h1>

@if (@Model.Count == 0)
{
  <h3>No distilleries added yet!</h3>
}

@foreach (Distillery distillery in Model)
{
  <li>@Html.ActionLink($"{distillery.Name}", "Details", new {id = distillery.DistilleryId})</li>
}



<p>@Html.ActionLink("Home", "Index", "Home", null, new { @class ="button" })</p>