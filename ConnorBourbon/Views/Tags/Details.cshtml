@{
  Layout = "_Layout";
}

@using ConnorBourbon.Models
@model ConnorBourbon.Models.Tag

<h2>Tag Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Title): @Html.DisplayFor(model => model.Title)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This tag does not belong to any bottles.</p>
}
else
{
  <h4>Bottles the tag belongs to:</h4>
  <ul>
  @foreach(BourbonTag join in Model.JoinEntities)
  {
    <li>@join.Bourbon.Name</li>
    @using (Html.BeginForm("DeleteJoin", "Tags"))
    {
      @Html.Hidden("joinId", @join.BourbonTagId)
      <input type="submit" value="Delete"/>
    }
  }
  </ul>
}



<p>@Html.ActionLink("Edit Tag", "Edit", new { id = Model.TagId })</p>
<p>@Html.ActionLink("Delete Tag", "Delete", new { id = Model.TagId })</p>
<p>@Html.ActionLink("Add a bottle", "AddBourbon", new { id = Model.TagId })</p>
<p>@Html.ActionLink("Back to list", "Index", null, null, new { @class= "button" })</p>