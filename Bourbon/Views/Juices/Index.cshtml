@{
  Layout = "_Layout";
}

@using ConnorBourbon.Models;

<h1>Juice Types</h1>

@if (@Model.Count == 0)
{
  <h3>No juices added yet!</h3>
}

@foreach (Juice juice in Model)
{
  <li>@Html.ActionLink($"{juice.Name}", "Details", new {id = juice.JuiceId})</li>
}



<p>@Html.ActionLink("Home", "Index", "Home", null, new { @class ="button" })</p>