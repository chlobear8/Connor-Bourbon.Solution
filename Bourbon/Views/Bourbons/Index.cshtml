@{
  Layout = "_Layout";
}

@using ConnorBourbon.Models;
@model List<ConnorBourbon.Models.Bourbon>;

<h1>Bourbon</h1>

@if (@Model.Count == 0)
{
  <h3>No bourbon added yet!</h3>
}
else
{
  <ul>
    @foreach (Bourbon bourbon in Model)
    {
      <li>@Html.ActionLink($"{bourbon.Name}", "Details", new { id = bourbon.BourbonId }) | @bourbon.Brand.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new bourbon", "Create", null, null, new { @class= "button" })</p>